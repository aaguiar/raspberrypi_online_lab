<%= form_for(@user) do |f| %>
  <%= f.label :username, 'Username' %>
  <%= f.text_field :username %>
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>
  <!-- admins can define roles -->
  <% if @current_user && @current_user.role?(:admin) %>
    <%= f.label :roles, 'Role' %>
    <%= f.select :roles, @roles %>
  <% end %>
  <div class="actions">
    <%= f.submit class: 'btn' %>
  </div>
<% end %>
